<script type="text/javascript"
  src="http://maps.googleapis.com/maps/api/js?key=AIzaSyB6wzeNjiXbHStSt8zDFDkh0SlmdUyLqQQ&sensor=false">
</script>
<div class="container">
  <div class="col-md-6" >

    <%= form_for :grafiti , url:    grafities_path do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
    
      <p>
        <%= f.label :latitud %><br>
          <div id="lat">
            <%= f.text_area :latitud %>
          </div>
      </p>

      <p>
        <%= f.label :longitud %><br>
        <div id="lon">
        <%= f.text_area :longitud %>
        </div>
      </p>
      
      <p>
        <%= f.label :estrato %><br>
        <%= f.text_area :estrato %>
      </p>
      
      <p>
        <%= f.label :seguridad %><br>
        <%= f.text_area :seguridad %>
      </p>

      <p>
        <%= f.label :educacion %><br>
        <%= f.text_area :educacion %>
      </p>
      
      <p>
        <%= f.label :ruta %><br>
        <%= f.text_area :ruta %>
      </p>
      
      <p>
        <%= f.submit %>
      </p>
    <% end %>
    <%= link_to 'Back', grafities_path %>
  
  </div>
  
  <div class="col-md-12">
    <div id="map_canvas" style='width: 600px; height: 800px;'></div>
  </div>
</div>

<script>
        var mapOptions = {
          center: new google.maps.LatLng(4.4279158, -74.2704962),
          zoom: 7,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
         map = new google.maps.Map(document.getElementById("map_canvas"),
            mapOptions);

     google.maps.event.addListener(map, 'click', function(event) {
      $("#lat textarea").val(event.latLng.k);
      $("#lon textarea").val(event.latLng.B);
    });



</script>